#map-canvas
#page-map
#page-map .ui-content
  width 100%
  height 100%
  padding 0
  min-height 380px
  min-width 280px

  // position:absolute;top:0;left:0; right:0; bottom:0; 

// Custom jQM icons
.ui-icon-drop
  background url("../images/drop18.png") no-repeat rgba(0, 0, 0, 0.4) !important

// LIST PAGE

#page-list li h2
  font-size: 1.2em

#page-list li .distance
  font-size: 2em
  padding-right 25px

#page-list #slider
  position absolute
  bottom 30px
  left 0
  height 50px
  width 100%
  padding-top 12px

#page-list #slider table
  text-align center
  font-weight bold
  width 100%

// Hide text box from slider. Can't be done with jqm parameters. :(
#page-list input.ui-slider-input
  display none

#page-list div.ui-slider
  margin 0
  width 100%

#page-list #slider table .slidericon
  width 40px;