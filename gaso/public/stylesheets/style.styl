/* SEARCH PAGE */
#page-search
  form
    padding 1em
/* /SEARCH PAGE */


/* STATION MAP PAGE */
#page-station-map
#station-map-canvas
#page-station-map .ui-content
  // Fill screen
  width 100%
  height 100%
  padding 0
  min-height 380px
  min-width 280px
/* /STATION MAP PAGE */


/* MENU PAGE */
#page-menu
  background #333
/* /MENU PAGE */

/* STATION PAGE */
#station-details
  #small-map-canvas
    width 100%
    padding 0
    height 180px

  .distance-direct
    background url("../images/distance_direct_24.png") no-repeat
    padding-left 30px
  .address
    float right

  #comments
    margin-top 1em

    #ownid
      font-weight bold
    #list-comments
      list-style-type: none
