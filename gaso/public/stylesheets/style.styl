/* MIXINS */
box-shadow()
  -webkit-box-shadow arguments
  -moz-box-shadow arguments
  box-shadow arguments

border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments
/* /MIXINS */

/* NAVIGATION BAR */
// Custom jQM icons
.ui-icon-drop
  background url("../images/drop18.png") no-repeat rgba(0, 0, 0, 0.4) !important
/* /NAVIGATION BAR */


/* COMMON */
size = 50
.ui-icon-station
  //margin 1em
  width (size)px
  height (size)px
  box-shadow 0 0 10px #222
stations = abc shell nesteoil seo teboil st1 question
for s in stations
  .ui-icon-{s}
    path = "../images/stationlogos/%s_%s.png" % (s size)
    background url(path) no-repeat

.distance-direct
  background url("../images/distance_direct_16.png") no-repeat
  padding-left 22px
.distance-drive
  background url("../images/car_16.png") no-repeat
  padding-left 22px

.ui-custom-hidden
  display none

.clear
  clear both

// Slider-related styles
#ranking-slider
  margin 0
  padding 5px 0
  height 35px

  div
    position absolute

  #filterslider
    left 68px
    right 84px

  .slidericon
    &.money
      top 2px
      left 3px
    &.distance
      top 3px
      right 8px

  // Hide text box from slider. Can't be done with jqm parameters.
  .ui-slider-input
    display none

  div.ui-slider
    margin 0
    width 100%
    padding 5px 0
  .ui-slider-handle
    width 50px
    top -3px
    margin 0 -25px
/* /COMMON */

/* LIST PAGE */
#page-list
  #fueltypes
    .ui-btn
    .ui-select
      margin 0px 5px 2px

  .ui-listview-filter 
    margin-top 10px


  li.ui-btn
    min-height 73px

    .ui-link-inherit
      padding-left 70px

    .ui-icon-station
      margin 0
      top .7em
      left .7em

    .ui-li-desc
      margin 0 0 0 .5em
      padding 0

    .station-info-price
    .station-info-distance
      line-height 20px

    .station-info-name
    .currency
      font-weight bold

    .currency
      font-size 16px
      padding-left 0.5em

    .price-value
    .distance-direct
    .distance-drive
    .fuel-type
      vertical-align top

    .fuel-type
      color gray
  
  li.ui-li-divider
    // Our dividers act as content toggles -> add some height to make them easier click targets.
    height 30px
    line-height 30px
    min-height 20px

  #footer
    // This page has the slider in the footer, add a top 'gleam' effect to make footer look a bit nicer.
    border-top 1px solid #999
/* /LIST PAGE */



/* MAP PAGE */
#page-map
#map-canvas
#page-map .ui-content
  // Fill screen
  width 100%
  height 100%
  padding 0
  min-height 380px
  min-width 280px
