
// MAP PAGE
#page-map
#map-canvas
#page-map .ui-content
  // Fill screen
  width 100%
  height 100%
  padding 0
  min-height 380px
  min-width 280px


// Custom jQM icons
.ui-icon-drop
  background url("../images/drop18.png") no-repeat rgba(0, 0, 0, 0.4) !important


// LIST PAGE
#page-list
  // Slider-related styles
  #slidertable
    width 100%  
    .slidericon
      width 30px
  // Hide text box from slider. Can't be done with jqm parameters.
  input.ui-slider-input
    display none
  div.ui-slider
    width 90%
  .ui-slider-handle
    // TODO do we need to add some custom style for slider handle? (It seems to get out of place at least on my windows Chrome --markus)

