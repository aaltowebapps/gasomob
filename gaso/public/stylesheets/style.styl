/* MIXINS */
box-shadow()
  -webkit-box-shadow arguments
  -moz-box-shadow arguments
  box-shadow arguments

border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments
/* /MIXINS */

/* NAVIGATION BAR */
#footer
  // Remove ugly green border
  border none

#navigation
  // add a top 'gleam' effect to make footer look a bit nicer
  border-top 1px solid #aaa
/* /NAVIGATION BAR */

/* MOBILE DEBUGGING */
#debug
  position fixed
  top 0
  left 0
  right 0
  z-index 1000
  font-size 10px
  line-height 10px
  opacity .7
  background white
  min-height 50px
  max-height 100px
  overflow-y scroll
  -webkit-overflow-scrolling touch
  border-bottom 1px solid gray
  em
    font-weight bold


/* CUSTOM JQM OVERRIDES */
// Custom jQM icons
.ui-icon-drop
  background url("../images/drop18.png") no-repeat rgba(0, 0, 0, 0.4) !important
  background-size 100% 100%
.ui-icon-centermap
  background url("../images/center.png") no-repeat !important
  background-size 100% 100%
/* /CUSTOM JQM OVERRIDES */

