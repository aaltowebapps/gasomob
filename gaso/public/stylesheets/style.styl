/* MIXINS */
box-shadow()
  -webkit-box-shadow arguments
  -moz-box-shadow arguments
  box-shadow arguments

border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments
/* /MIXINS */

/* NAVIGATION */
// Custom jQM icons
.ui-icon-drop
  background url("../images/drop18.png") no-repeat rgba(0, 0, 0, 0.4) !important



/* COMMON */
// Experimenting with stylus for defining station icons as bg images. Works, but still would need custom positioning for lists.
// Img-tags in lists with jqm work out of the box so lets go there with that, at least for now.
size = 100
.ui-icon-station
  float right
  //margin 1em
  width (size)px
  height (size)px
  box-shadow 0 0 10px #222
stations = abc shell nesteoil seo teboil st1
for s in stations
  .ui-icon-{s}
    path = "../images/stationlogos/%s_%s.png" % (s size)
    background url(path) no-repeat
.distance-direct
  background url("../images/distance_direct_24.png") no-repeat
  padding-left 30px
.distance-drive
  background url("../images/car_26.png") no-repeat
  padding-left 30px
/* /COMMON */



/* LIST PAGE */
#page-list
  // Slider-related styles
  #ranking-slider
    margin 0
    padding 5px 10px
    #slidertable
      width 100%
      #filterslider
        padding 0 25px 0 15px
      .slidericon
        width 40px
        padding 0 5px
    // Hide text box from slider. Can't be done with jqm parameters.
    .ui-slider-input
      display none
  #footer
    border-top 1px solid #999

  div.ui-slider
    margin 0
    width 100%
    padding 5px 0
  .ui-slider-handle
    width 50px
    top -3px
    margin 0 -25px

  // Other stuff related to list
  .ui-li-aside
    width 20%

  li .distance
    font-size 1.4em
    padding-right 25px
/* /LIST PAGE */



/* MAP PAGE */
#page-map
#map-canvas
#page-map .ui-content
  // Fill screen
  width 100%
  height 100%
  padding 0
  min-height 380px
  min-width 280px
/* /MAP PAGE */



/* MENU PAGE */
#page-menu
  background #333
/* /MENU PAGE */

/* STATION PAGE */
#station-details
  .comment table
    width 100%
    .comment-author
      text-align right

/* /STATION PAGE */
